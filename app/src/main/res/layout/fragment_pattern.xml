<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/elegirColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="R"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="G"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Index"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/index"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0"/>
    </LinearLayout>

    <Button
        android:id="@+id/encender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encender"/>

    <Button
        android:id="@+id/apagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apagar"/>

    <Button
        android:id="@+id/encenderReconocimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconocimento ON"/>

    <Button
        android:id="@+id/apagarReconocimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconocimento OFF"/>
    <Button
        android:id="@+id/nextPatron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"/>

</LinearLayout>